    // AI Analysis handlers
  function openAi(){ dom('aiOverlay').classList.add('show'); dom('aiOverlay').setAttribute('aria-hidden','false'); setTimeout(()=>{ try{ dom('aiText').value = computeAnalysis(); }catch(e){} },120); }
